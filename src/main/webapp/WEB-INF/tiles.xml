    <definition name="baseLayout" template="/tiles/layout.jsp">

        <put-attribute name="header" value="/tiles/header.jsp"/>
        <put-attribute name="menu" value="/tiles/menu.jsp"/>
        <put-attribute name="body" value="/tiles/body.jsp"/>
      
    </definition>

    <definition name="hello" extends="baseLayout">  
        <put-attribute name="body" value="/pages/HelloWorld.jsp"/>
    </definition>
    
    
    <definition name="t_registraEmpleado" extends="baseLayout">
        <put-attribute name="body" value="/pages/registerEmpleado.jsp"/>
    </definition>

	<definition name="t_reportEmpleado" extends="baseLayout">
        <put-attribute name="body" value="/pages/reportEmpleado.jsp"/>
    </definition>
    
    <definition name="t_actualizaEmpleado" extends="baseLayout">
